<Window x:Class="AccountingAPZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingAPZ"
        mc:Ignorable="d"
        Title="Учет изготавливаемой продукции" 
        Height="600" Width="1000"
        MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/img/APZ.png" 
               Grid.Row="0" 
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="5 0 0 0"/>
        <Label x:Name="headLbl" 
               Grid.Row="0" 
               Content="Производство продукции" FontSize="30" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Center"
               Margin="0 0 5 0"/>
        <Frame Name="frmMain" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
