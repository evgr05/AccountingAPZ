<Page x:Class="AccountingAPZ.Pages.PageAddEditTypeWork"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingAPZ.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddEditTypeWork">

    <Grid>
        <StackPanel Width="230" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Тип работы: " FontSize="16"/>
            <TextBox x:Name="txbTitle" Text="{Binding Title}" Margin="0 0 0 10" Height="30" FontSize="16"/>

            <Button x:Name="saveBtn" Content="Сохранить" Click="saveBtn_Click" Margin="0 0 0 10" Height="30" FontSize="16"/>
            <Button x:Name="bckBtn" Content="Назад" Click="bckBtn_Click" Height="30" FontSize="16"/>

        </StackPanel>
    </Grid>
</Page>
