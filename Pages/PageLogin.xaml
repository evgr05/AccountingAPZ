<Page x:Class="AccountingAPZ.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingAPZ.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#00000000"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Image Source="/img/zavod.jpg" Stretch="UniformToFill"/>
        </Grid>

        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300" 
                    Grid.ColumnSpan="2">
            <Grid Margin="0 0 0 10">
                <TextBlock Text="Логин: " VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14"/>
                <TextBox x:Name="txbLogin" HorizontalAlignment="Right"
                 Height="30" Width="240"
                 FontSize="16"/>
            </Grid>

            <Grid Margin="0 0 0 10">
                <TextBlock Text="Пароль:" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" 
                   FontSize="14"/>
                <PasswordBox x:Name="psbPassword"
                     Height="30" Width="240"
                     FontSize="16"
                     HorizontalAlignment="Right"/>
            </Grid>


            <Button x:Name="okBtn" 
            Content="Войти" 
            Click="okBtn_Click"
            Height="30"
            FontSize="16"/>
        </StackPanel>

    </Grid>
</Page>
