<Page x:Class="AccountingAPZ.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingAPZ.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Grid Margin="0 0 0 10">
                <TextBlock Text="Логин: " VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14"/>
                <TextBox x:Name="txbLogin" HorizontalAlignment="Right"
                         Height="30" Width="240"
                         FontSize="16"/>
            </Grid>

            <Grid Margin="0 0 0 10">
                <TextBlock Text="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14"/>
                <PasswordBox x:Name="psbPassword"
                             Height="30" Width="240"
                             FontSize="16"
                             HorizontalAlignment="Right"/>
            </Grid>


            <Button x:Name="okBtn" 
                    Content="Войти" 
                    Click="okBtn_Click"
                    Height="30"
                    FontSize="16"/>
        </StackPanel>
        
        
    </Grid>
</Page>
