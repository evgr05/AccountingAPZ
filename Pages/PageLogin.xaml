<Page x:Class="AccountingAPZ.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingAPZ.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock Text="Логин: "/>
            <TextBox x:Name="txbLogin"/>
            <TextBlock Text="Пароль: "/>
            <PasswordBox x:Name="psbPassword" Margin="0 0 0 10"/>
            <Button x:Name="okBtn" Content="Войти" Click="okBtn_Click"/>
        </StackPanel>
        
        
    </Grid>
</Page>
